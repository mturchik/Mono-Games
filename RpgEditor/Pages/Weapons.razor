        public string Name { get; set; } = "";
        [Required, StringLength(100, MinimumLength = 3)]
        public string Type { get; set; } = "";
        [Required]
        public int Price { get; set; }
        [Required]
        public float Weight { get; set; }
        [Required]
        public Hands AllowableHands { get; set; }
        [Required]
