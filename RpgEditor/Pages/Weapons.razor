    List<WeaponData> WeaponList = new();
    List<string> ClassNameList = new() { "Warrior", "Rogue", "Priest", "Wizard" };

    protected override void OnInitialized()
    {
        WeaponList.AddRange(DataManager.WeaponData.Values);
    }

