@page "/Games"
@inject GameDataManager GameDataManager

<h3>Games</h3>

<div class="container-fluid">
    @if (Edit != null)
    {
        <EditForm Model="Edit" OnValidSubmit="SubmitForm">
            <DataAnnotationsValidator />

            <div class="row mb-2">
                <div class="col-3 text-end">
                    <div class="form-label">Id:</div>
                </div>
                <div class="col-3">
                    @Edit.Id
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-3 text-end">
                    <div class="form-label">Name:</div>
                </div>
                <div class="col-3">
                    <InputText class="form-control" @bind-Value="Edit.Name"></InputText>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-3 text-end">
                    <div class="form-label ">Description:</div>
                </div>
                <div class="col-3">
                    <InputTextArea class="form-control" @bind-Value="Edit.Description"></InputTextArea>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-12">
                    <button class="btn btn-primary me-2" type="submit">Save</button>
                    <button class="btn btn-outline-primary" type="button" @onclick="() => Edit = null">Cancel</button>
                </div>
            </div>

            <ValidationSummary />
            <hr class="mt-2" />
        </EditForm>
    }
    <div class="row mt-2">
        @if (Edit == null)
        {
            <div class="col-sm-12 mb-2">
                <button class="btn btn-primary" @onclick="() => Edit = new()">Create New</button>
            </div>
        }
        <div class="col-sm-12">
            <table class="table table-bordered table-primary table-responsive table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var data in Data)
                    {
                        <tr>
                            <td>@data.Id</td>
                            <td>@data.Name</td>
                            <td>@data.Description</td>
                            <td>
                                @if (GameDataManager.LoadedGame?.Id == data.Id)
                                {
                                    <button class="btn btn-secondary" @onclick="() => Load(null)">Unload</button>
                                }
                                else
                                {
                                    <button class="btn btn-outline-secondary" @onclick="() => Load(data)">Load</button>
                                    <button class="btn btn-info ml-2" @onclick="() => Edit = data.Clone()">Edit</button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    RolePlayingGame? Edit { get; set; }
    List<RolePlayingGame> Data { get; set; } = new();

    protected override void OnInitialized()
    {
        Data = GameDataManager.Games.Queryable().ToList();
    }

    void Load(RolePlayingGame? rpg)
    {
        GameDataManager.LoadGame(rpg);
        Edit = null;
    }

    void SubmitForm()
    {
        if (Edit is null) return;
        GameDataManager.Games.Upsert(Edit);
        Data = GameDataManager.Games.Queryable().ToList();
        Edit = null;
    }
}
